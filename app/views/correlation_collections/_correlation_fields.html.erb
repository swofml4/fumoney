<fieldset class="fieldset-noborder">
	<div class="field">
		<%= f.hidden_field :id %>
		<%= f.label :correlation_amount, 'Correlation (%)' %>
		<%= f.text_field :correlation_amount %>
		<% options1 = options_from_collection_for_select(@asset_types, 'id', 'name',f.object.asset_type1_id) %>
		<% options2 = options_from_collection_for_select(@asset_types, 'id', 'name',f.object.asset_type2_id) %>
		<%= f.select :asset_type1_id,  options1%>
		<%= f.select :asset_type2_id,  options2%>
		<%= f.hidden_field :_destroy %>
		<%= link_to "Remove", '#', class: "remove_fields" %>
	</div>
</fieldset>